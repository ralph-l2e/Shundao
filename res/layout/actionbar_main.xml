<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/actionbar_padding"
    android:background="@drawable/actionbar_bg" >

    <ImageButton
        android:id="@+id/left_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/actionbar_left_button" />

    <ImageButton
        android:id="@+id/middle_img_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/actionbar_logo" />

    <ImageButton
        android:id="@+id/right_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/actionbar_right_button" />

</FrameLayout>